{
  "include": [
    "src/**/*",
    "typings/**/*",
    "configs/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  }
}